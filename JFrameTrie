    private void BuscarActionPerformed(java.awt.event.ActionEvent evt) {
        
        String b = BuscarText.getText();
        if(t.search(b)){
            JOptionPane.showMessageDialog(null, "Se encontro el texto");
        }else{
            JOptionPane.showMessageDialog(null, "No existe el texto");
        }
        
    }

    private void InsertActionPerformed(java.awt.event.ActionEvent evt) {
        
        String i = InsertText.getText();
        if(t.search(i)){
            JOptionPane.showMessageDialog(null, "El texto ya existe");
        }else{
            t.insert(i);
            JOptionPane.showMessageDialog(null, "Se inserto correctamente");
        }
        
    }

    private void ReemplazarActionPerformed(java.awt.event.ActionEvent evt) {
        
        String br = BRText.getText();
        String r = ReemplazarText.getText();
        
        t.replace(br, r);
        JOptionPane.showMessageDialog(null, "Se reemplazo Correctamente");
        
    }

